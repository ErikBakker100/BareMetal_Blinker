{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Rpi-4B 32bit",
            "cwd": "${workspaceFolder}/4B/BareMetal32bit_Blinker",
            "executable": "build/main.elf",
            "request": "launch",
            "type": "cortex-debug",
            "armToolchainPath": "C:/Program Files (x86)/Arm GNU Toolchain arm-none-eabi/14.3 rel1/bin",
            "servertype": "openocd",
            "device": "cortex-a72",
            "configFiles": ["openocd.cfg"],
            "serverArgs": [
//                "-d3",
            ],
            "preLaunchTask": "debug",
            "runToEntryPoint": "main",
            "postLaunchCommands": [
                "monitor halt"
            ],
            "overrideLaunchCommands": [
                "target extended-remote localhost:50000"
            ],
            "showDevDebugOutput": "console",
            "showDevDebugTimestamps": false,
            "toolchainPrefix": "arm-none-eabi",
            "liveWatch": true,
            "svdPath": "${workspaceFolder}/4B/bcm2711_lpa.svd"  // optioneel voor peripherals
        },
        {
            "name": "Debug Rpi-4B 64bit",
            "cwd": "${workspaceFolder}/4B/BareMetal64bit_Blinker",
            "executable": "build/main.elf",
            "request": "launch",
            "type": "cortex-debug",
            "armToolchainPath": "C:/Program Files (x86)/Arm GNU Toolchain aarch64-none-elf/14.3 rel1/bin",
            "servertype": "openocd",
            "device": "cortex-a72",
            "configFiles": ["openocd.cfg"],
            "serverArgs": [
//                "-d3",
            ],
            "preLaunchTask": "debug",
            "runToEntryPoint": "main",
            "postLaunchCommands": [
                "monitor halt"
            ],
            "overrideLaunchCommands": [
                "target extended-remote localhost:50000"
            ],
            "showDevDebugOutput": "console",
            "showDevDebugTimestamps": false,
            "toolchainPrefix": "aarch64-none-elf",
            "liveWatch": true,
            "svdPath": "${workspaceFolder}/4B/bcm2711_lpa.svd"  // optioneel voor peripherals
        },
    ]
}